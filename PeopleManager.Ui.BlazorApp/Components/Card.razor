<div class="card">
    <div class="card-header">
        @Header
    </div>
    <div class="card-body">
        @Body
    </div>
    <div class="card-footer">
        @Footer
    </div>
</div>

@code
{
    [Parameter]
    public RenderFragment? Body { get; set; }

    [Parameter]
    public RenderFragment? Header { get; set; }

    [Parameter]
    public RenderFragment? Footer { get; set; }
}
